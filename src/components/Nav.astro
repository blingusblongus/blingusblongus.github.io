---
import { Image } from "astro:assets";
import blingus from "../assets/images/blingus_cropped.png";

const navItems = [
    {
        path: "/about",
        label: "About",
    },
];
---

<nav class="h-12 w-full flex justify-between items-center bg-slate-800 px-3 ">
    <div class="h-full w-auto flex">
        <a href="/" class="flex items-center">
            <Image src={blingus} alt="blingus" class="h-full w-auto pt-2" />
        <div class="mx-3">Home</div>
        </a>
    </div>
    <div class="p-3">
        <div>
            {
                navItems.map((item) => {
                    return <a href={item.path}>{item.label}</a>;
                })
            }
        </div>
    </div>
</nav>
