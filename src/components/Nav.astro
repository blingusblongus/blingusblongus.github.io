---
import { Image } from "astro:assets";
import blingus from "../assets/images/blingus_cropped.png";

const navItems = [
    {
        path: "/code",
        label: "Code",
    },
    {
        path: "/experience",
        label: "Experience",
    },
    {
        path: "/skills/all",
        label: "Skills",
    },
    {
        path: "/blog",
        label: "Blog",
    },
    {
        path: "/about",
        label: "About",
    },
];

interface Props {
    path?: string;
    title: string;
}
const { path, title } = Astro.props;
---

<nav class="flex h-12 w-full items-center justify-between bg-slate-800 px-3">
    <div class="flex h-full w-auto">
        <a href="/" class="flex items-center">
            <Image
                src={blingus}
                alt="blingus"
                class="h-full w-auto pt-2"
                width={90}
                height={108}
                quality="mid"
            />
            <div class="mx-3">Home</div>
        </a>
    </div>
    <div class="hidden gap-5 p-3 xs:flex">
        {
            navItems.map((item) => {
                let active = item.label === title;

                if (!active) {
                    return (
                        <div class="flex flex-col">
                            <div>
                                <a href={item.path}>{item.label}</a>
                            </div>
                            <div class="h-1 w-full" />
                        </div>
                    );
                }
                return (
                    <div class="flex flex-col">
                        <div>
                            <a href={item.path}>{item.label}</a>
                        </div>
                        <div
                            class="h-0.5 w-full rounded-s bg-sky-300"
                            transition:name="nav-active"
                        />
                    </div>
                );
            })
        }
    </div>
</nav>
