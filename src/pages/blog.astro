---
import Layout from "../layouts/Layout.astro";
import { slide } from "astro:transitions";
import "../assets/styles/about.module.css";
import Content from "../components/Content.astro";
---

<Layout title="Blog" path="/blog">
    <Content>
        <article
            class="prose prose-invert lg:prose-lg prose-headings:mt-[3rem]"
        >
            <h1>
                <span transition:name="blog-title" class="text-center"
                    >Blog</span
                >
            </h1>

            <div
                class="w-full h-full"
                transition:animate={slide({ duration: 500 })}
            >
                {"Coming soon <3"}
            </div>
        </article>
    </Content>
</Layout>
