---
import Layout from "../layouts/Layout.astro";
import Content from "../components/Content.astro";
import TransitionCard from "../components/TransitionCard.astro";
import { Image } from "astro:assets";
import squid from "../assets/images/jonathan-diemel-3CxVpFO739c-unsplash.jpg";
import pinkNick from "../assets/images/Nick_Pink_895aa1f259.jpeg";
import Name from "../components/animatedSvgs/Name.astro";
import EnterOnScroll from "../components/EnterOnScroll";
import ContactMe from "../components/ContactMe.astro";
---

<Layout title="Home">
    <main>
        <section class="w-screen relative">
            <Image
                src={squid}
                alt="Squid Image"
                class="object-cover opacity-50 max-h-[20rem] w-full h-full"
                loading="eager"
                height={360}
            />
            <div
                class="absolute top-0 left-0 flex justify-around items-center w-full h-full"
            >
                <div class="text-4xl font-bold">
                    <Name />
                    <!-- <div class="pl-[3rem]">Nick</div> -->
                    <!-- <div class="pl-[4rem]">Allen</div> -->
                    <div class="text-2xl font-light text-gray-300 pt-5">
                        Software Developer
                    </div>
                </div>
                <div class="sm:block hidden">
                    <Image
                        src={pinkNick}
                        alt="My picture"
                        class="h-[15rem] w-[15rem] rounded-full object-cover"
                    />
                </div>
            </div>
        </section>

        <Content>
            <ul class="grid gap-3 w-full h-full grid-cols-1 sm:grid-cols-2">
                <TransitionCard
                    href="/about"
                    title="About Me"
                    body="¯\\_(ツ)_/¯"
                    transitionName="about-title"
                />
                <TransitionCard
                    href="/code"
                    title="Code"
                    body="Check out what I've worked on!"
                    transitionName="code-title"
                />
                <TransitionCard
                    href="/experience"
                    title="Experience"
                    body="My previous work experience"
                    transitionName="experience-title"
                />
                <TransitionCard
                    href="/articles"
                    title="Articles"
                    body="Read some stuff, or look at the pictures"
                    transitionName="articles-title"
                />
            </ul>
        </Content>
    </main>
</Layout>
