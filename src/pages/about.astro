---
import TextPage from "../layouts/TextPage.astro";
import * as page from "../content/about.md";
import { slide } from "astro:transitions";
import "../assets/styles/about.module.css";
const { Content, frontmatter } = page;
---

<TextPage title={frontmatter.title}>
    <h1>
        <span transition:name="about-title" class="text-center"
            >{frontmatter.title}</span
        >
    </h1>

    <div class="w-full h-full" transition:animate={slide({ duration: 800 })}>
        <Content />
    </div>
</TextPage>
